{
  "format_on_save": "on",
  "lsp": {
    "biome": {
      "binary": {
        "path": "yarn",
        "arguments": ["biome", "lsp-proxy"]
      }
    }
  },
  "auto_install_extensions": {
    "biome": true
  },
  // blacklist eslint and typescript-language-server
  // we use biome (plugin) and vtsls (builtin)
  // those are enabled by default, no need to whitelist them
  "language_servers": ["!eslint", "!typescript-language-server", "..."],

  "languages": {
    "JavaScript": {
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "TypeScript": {
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "TSX": {
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "JSON": { "formatter": { "language_server": { "name": "biome" } } },
    "JSONC": { "formatter": { "language_server": { "name": "biome" } } },
    "CSS": { "formatter": { "language_server": { "name": "biome" } } }
  }
}
